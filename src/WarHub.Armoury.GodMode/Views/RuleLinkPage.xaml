<?xml version="1.0" encoding="utf-8"?>

<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:services="clr-namespace:WarHub.Armoury.GodMode.Services;assembly=WarHub.Armoury.GodMode"
            xmlns:controls="clr-namespace:WarHub.Armoury.GodMode.Controls;assembly=WarHub.Armoury.GodMode"
            xmlns:views="clr-namespace:WarHub.Armoury.GodMode.Views;assembly=WarHub.Armoury.GodMode"
            x:Class="WarHub.Armoury.GodMode.Views.RuleLinkPage"
            x:Name="Page"
            BindingContext="{x:Static services:ViewModelLocator.RuleLinkViewModel}"
            Title="{Binding Target.Name, StringFormat='Link: {0} (Rule)'}">

    <ContentPage Title="Properties">
        <ScrollView>
            <StackLayout Orientation="Vertical">
                <views:IdentifierView BindingContext="{Binding Source={x:Reference Page}, Path=BindingContext.Id}" />

                <Label>Target</Label>
                <controls:BindablePicker Title="Link target" DisplayMember="Name" ItemsSource="{Binding Targets}"
                                         SelectedItem="{Binding Target}" />
                <StackLayout Orientation="Horizontal" Padding="0,0,10,0">
                    <Button Text="Go to target" Command="{Binding OpenLinkTargetAsSharedCommand}" />
                    <Button Text="Open in next page" Command="{Binding OpenLinkTargetAsChildCommand}" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage>

    <views:ModifiersListPage />

</TabbedPage>
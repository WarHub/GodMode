<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:WarHub.Armoury.GodMode.Modules.Home.Views;assembly=WarHub.Armoury.GodMode"
             x:Class="WarHub.Armoury.GodMode.Modules.Home.Views.MainPage"
             x:Name="Page"
             BindingContext="{x:Static views:ViewModelLocator.MainViewModel}"
             Title="GodMode">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Text="Open Demo Catalogue" Command="{Binding OpenCatalogueCommand}" />
        <Button Text="Open Data Management" Command="{Binding OpenRemoteDataIndexCommand}" />
        <Button Text="Open Storage browser" Command="{Binding OpenStorageHomeCommand}" />
    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarHub.Armoury.GodMode.Modules.StorageExplorer.Views.StorageFilePage"
             xmlns:local="clr-namespace:WarHub.Armoury.GodMode.Modules.StorageExplorer.Views;assembly=WarHub.Armoury.GodMode"
             BindingContext="{x:Static local:ViewModelLocator.StorageFileDetailsViewModel}"
             Title="{Binding File.Name}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Text="{Binding File.Path}" />
      
      <Editor Grid.Row="1" Text="{Binding Contents, Mode=TwoWay}" />
    </Grid>
</ContentPage>
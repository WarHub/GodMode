<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:WarHub.Armoury.GodMode.Modules.DataAccess.Views;assembly=WarHub.Armoury.GodMode"
             x:Class="WarHub.Armoury.GodMode.Modules.DataAccess.Views.GameSystemDetailsPage"
             x:Name="Page"
             BindingContext="{x:Static views:ViewModelLocator.GameSystemDetailsViewModel}"
             Title="Game system details">

    <Grid>

        <StackLayout Spacing="15">

            <Label Text="{Binding GameSystemInfo.Name}" FontAttributes="Bold" FontSize="24" />

            <Label Text="{Binding GameSystemInfo.Revision, StringFormat='v{0}'}" />

            <Label Text="{Binding GameSystemInfo.AuthorName, StringFormat='by {0}'}" />

            <Label Text="{Binding GameSystemInfo.RawId, StringFormat='id: {0}'}" />

            <Label Text="{Binding GameSystemInfo.Sourcebook, StringFormat='books: {0}'}" />

            <Label Text="{Binding GameSystemInfo.OriginProgramVersion, StringFormat='BattleScribe version: {0}'}" />

        </StackLayout>

    </Grid>

</ContentPage>